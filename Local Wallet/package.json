{
    "name": "cloutcontracts-wallet",
    "version": "0.0.1",
    "description": "A minimal Ethereum wallet for CloutContracts",
    "author": "Andrew Kamal",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.cloutcontractswallet",
        "productName": "CloutContracts Wallet",
        "mac": {
            "category": "financial"
        },
        "linux": {
            "target": [
                "deb"
            ]
        },
        "win": {}
    },
    "repository": "https://github.com/CloutContracts/Wallet",
    "keywords": [
        "cloutcontracts",
        "cloutcontracts-wallet"
    ],
    "license": "MIT",
    "devDependencies": {
        "electron": "~35.7.5",
        "electron-builder": "^26.7.0"
    },
    "dependencies": {
        "clipboardy": "^4.0.0",
        "electron-default-menu": "^1.0.1",
        "ethers": "^6.13.4"
    }
}
